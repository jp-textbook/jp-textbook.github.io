    <div class="jumbotron">
      <div class="container">
        <div class="btn-group pull-right" role="group" aria-label="Textbook symbol / Textbook number">
          <button type="button" class="btn btn-default btn-lg"><%=h param[:textbookSymbol] %></button>
          <button type="button" class="btn btn-default btn-lg"><%=h param[:textbookNumber] %></button>
        </div>
        <h1><%=h param[:name] %>
        <%- if param[:bookEdition] -%>
          <small><%= param[:bookEdition] %></small>
        <%- end -%>
        </h1>
        <p><%=h param[:publishers].first[:name] %></p>
        <p><%=h param[:school_name_en] %> - <%=h param[:subject_name_en] || param[:subjectArea_name_en] %>
          <%- if param[:grade] -%>
            (<%= param[:grade].sort.map{|i| ordinalize(i) }.join(", ") %> grade<%= "s" if param[:grade].size > 1 %>)
          <%- end -%>
        </p>
        <p><small><span class="glyphicon glyphicon-link"></span> <a href="<%=h param[:uri] %>"><%=h param[:uri] %></a></small></p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><a href="../../../"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
            <li><a href="<%=h relative_path_uri(param[:curriculum], :en) %>">Curriculum Guidelines for <%=h param[:school_name_en] %> (since AY<%=h param[:curriculum].last_part %>)</a></li>
            <li><a href="<%=h relative_path_uri(param[:subjectArea], :en) %>"><%=h param[:subjectArea_name_en] %></a></li>
            <%- if param[:subject] -%>
            <li><a href="<%=h relative_path_uri(param[:subject], :en) %>"><%=h param[:subject_name_en] %></a></li>
            <%- end -%>
            <li class="active"><%=h param[:name] %></li>
          </ol>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2>Details</h2>
          <dl class="dl-horizontal">
            <dt>Title</dt><dd><%=h param[:name] %></dd>
            <dt>Authors &amp; editors</dt><dd><%=h param[:editor] %></dd>
            <dt>Publisher</dt>
            <%- param[:publishers].each do |publisher| -%>
            <dd><a href="<%=h relative_path_uri(publisher[:uri]) %>"><%=h publisher[:name] %></a></dd>
            <%- end -%>
            <%- if param[:bookEdition] -%>
            <dt>Edition</dt><dd><%=h param[:bookEdition] %></dd>
            <%- end -%>
            <dt>Type of school</dt><dd><a href="<%=h relative_path_uri(param[:school], :en) %>"><%=h param[:school_name_en] %></a></dd>
            <dt>Textbook Symbol</dt><dd><%=h param[:textbookSymbol] %></dd>
            <dt>Textbook Number</dt><dd><%=h param[:textbookNumber] %></dd>
            <dt>Subject area / subject</dt>
            <dd>
              <a href="<%=h relative_path_uri(param[:subjectArea], :en) %>"><%=h param[:subjectArea_name_en] %></a>
              <%- if param[:subject_name] -%>
                / <a href="<%=h relative_path_uri(param[:subject], :en) %>"><%=h param[:subject_name_en] %></a>
              <%- end -%>
            </dd>
            <%- if param[:grade] -%>
            <dt>Grade</dt><dd><%= param[:grade].map{|i| ordinalize(i) }.join(", ") %> grade<%= "s" if param[:grade].size > 1 %></dd>
            <%- end -%>
            <%- if param[:dimensions] -%>
            <dt>Dimensions</dt><dd><%= param[:dimensions] %></dd>
            <%- end -%>
            <%- if param[:extent] -%>
            <dt>Total number of pages</dt><dd><%= param[:extent] %></dd>
            <%- end -%>
            <%- if param[:isbn] -%>
              <%- param[:isbn].each do |isbn| -%>
              <dt>ISBN</dt><dd><%= isbn %></dd>
              <%- end -%>
            <%- end -%>
            <dt>Usage year(s)</dt><dd><%=h param[:usageYear] %></dd>
            <dt>Authorized year</dt><dd><%=h param[:authorizedYear] %></dd>
            <dt>Catalogues listed</dt>
            <dd><% catalogues = param[:catalogue].sort.map do |catalogue|
                     %Q|<a href="#{h relative_path_uri(catalogue, :en) }">#{h catalogue.last_part }</a>|
                   end -%>
                <%= catalogues.join(", ") -%>
            </dd>
            <dt>Curriculum guideline</dt><dd><a href="<%=h relative_path_uri(param[:curriculum], :en) %>"><%=h param[:curriculum_year] %></a></dd>
            <%- if param[:note] -%>
            <dt>注記</dt>
              <%- param[:note].each do |note| -%>
              <dd><%=h note %></dd>
              <%- end -%>
            <%- end -%>
          </dl>
        </div>
      </div>

      <hr>
      <div class="row">
        <div class="col-md-12">
          <h2>Links</h2>
          <ul>
            <%- param[:item].each do |item| -%>
              <%- case item[:holding] -%>
              <%- when :nier -%>
              <li><a href="https://nieropac.nier.go.jp/lib/database/TEXTBOOK/<%=h item[:recordID] %>/">NIER Library of Education OPAC</a> <span class="callNumber" title="call number"><%=h item[:callNumber] %></span></li>
              <%- when :textbook_rc -%>
              <li><a href="javascript:document.getElementById('textbook_rc_lib_<%=h item[:recordID] %>').submit()">Textbook Library, Japan Textbook Research Center OPAC</a> <span class="callNumber" title="call number"><%=h item[:callNumber] %></span></li>
              <form action="http://textbook-rc-lib.net/Opac/search.htm" id="textbook_rc_lib_<%=h item[:recordID] %>" method="post">
                <input type="hidden" name="s" value="-cKZ-xZqMVYzA_3dOR9fO1zB6wh">
                <input type="hidden" name="ie6_s_target" value="ds">
                <input type="hidden" name="form_name" value="form">
                <input type="hidden" name="d_free_word" value="<%=h item[:recordID] %>">
                <input type="hidden" name="ds" value="検索">
              </form>
              <%- end -%>
            <%- end -%>
          </ul>
          <%- if param[:isbn] -%>
            <ul>
              <%-
              { "NDL Search": "http://iss.ndl.go.jp/api/openurl?isbn=",
                "CiNii Books": "http://ci.nii.ac.jp/books/openurl/query?isbn=",
                "Calil": "http://api.calil.jp/openurl?rft.isbn=",
              }.each do |label, url| -%>
                <%- param[:isbn].each do |isbn| -%>
                <li><a href="<%= url %><%=h isbn %>"><%=h label %></a><%=h param[:isbn].size > 1 ? " (#{isbn})" : "" %></li>
                <%- end -%>
              <%- end -%>
            </ul>
          <%- end -%>
        </div>
      </div>
    </div>
