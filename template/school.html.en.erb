    <div class="jumbotron">
      <div class="container">
        <h1><%=h param[:name_en] %></h1>
        <p><small><span class="glyphicon glyphicon-link"></span> <a href="<%=h param[:uri] %>"><%=h param[:uri] %></a></small></p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><a href="../../../../"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
            <li class="active"><%=h param[:name_en] %></li>
          </ol>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2>Details</h2>
          <dl class="dl-horizontal">
            <dt>Type of school</dt><dd><%=h param[:name_en] %></dd>
            <dt>Name in Japanese</dt><dd><ruby><%=h param[:name] %><rt><%=h param[:name_yomi] %></rt></ruby></dd>
          </dl>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2>List of curriculum guidelines</h2>
          <ul>
            <%- param[:curriculums].each do |curriculum| -%>
              <li><a href="<%=h curriculum[:uri].to_s.sub("https://w3id.org/jp-textbook/", "../") %>"><%=h curriculum[:name_en] %>
                  (Published in <%=h curriculum[:datePublished_ym_en] %>, and enforced in <%=h curriculum[:startDate_ym_en] %>)</a></li>
            <%- end -%>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2>Links</h2>
          <ul>
            <li><a href="<%=h param[:sameAs] %>"><%=h param[:sameAs] %></a></li>
          </ul>
        </div>
      </div>
    </div>
