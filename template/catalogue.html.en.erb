    <div class="jumbotron">
      <div class="container">
        <h1><%=h param[:name_en] %></h1>
        <p><small><span class="glyphicon glyphicon-link"></span> <a href="<%=h param[:uri] %>"><%=h param[:uri] %></a></small></p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><a href="../../../"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
            <li class="active"><%=h param[:name_en] %></li>
          </ol>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2>Details</h2>
          <dl class="dl-horizontal">
            <dt>Published year</dt><dd><%=h param[:datePublished] %></dd>
            <dt>Usage year</dt><dd><%=h param[:usageYear] %></dd>
            <dt>Type of school</dt><dd><%=h param[:school_name_en] %></dd>
          </dl>
        </div>
      </div>

      <hr>
      <div class="row">
        <div class="col-md-12">
          <h2>Related links</h2>
          <ul>
            <%- if param[:url] -%>
              <%- param[:url].each do |url| -%>
              <li><a href="<%=h url %>">Textbook Catalogues (MEXT website)</a></li>
              <%- end -%>
            <%- end -%>
            <%- if param[:seeAlso] -%>
              <%- param[:seeAlso].each do |url| -%>
              <li><a href="<%=h url %>">Textbook Catalogues (Wayback Machine by Internet Archive)</a></li>
              <%- end -%>
            <%- end -%>
            <li><a href="https://nieropac.nier.go.jp/ebopac/<%=h param[:recordID] %>">NIER Education of Library OPAC</a>
                <span class="callNumber" title="Call number"><%=h param[:callNumber] %></span>
                <span class="itemID" title="Record ID"><%=h param[:itemID] %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
