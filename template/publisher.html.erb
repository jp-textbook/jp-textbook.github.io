    <div class="jumbotron">
      <div class="container">
        <h1>
          <%- if param[:name_yomi] -%>
          <ruby><%=h param[:name] %><rt><%=h param[:_name_yomi] %></rt></ruby>
          <%- else -%>
          <%=h param[:name] %>
          <%- end -%>
        </h1>
        <p>掲載教科書目録: <%=h param[:catalogueYear] %>年度発行</p>
        <p><small><span class="glyphicon glyphicon-link"></span> <a href="<%=h param[:uri] %>"><%=h param[:uri] %></a></small></p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><a href="../../"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home</a></li>
            <li class="active"><%=h param[:publisher_name ] %></li>
          </ol>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h2>詳細情報</h2>
          <dl class="dl-horizontal">
            <dt>発行者名</dt><dd><ruby><%=h param[:name] %><rt><%=h param[:name_yomi] %></rt></ruby></dd>
            <dt>名称（ローマ字表記）</dt><dd><%=h param[:name_latin] %></dd>
            <dt>発行者略称</dt><dd><%=h param[:publisher_abbr] %></dd>
            <dt>発行者番号</dt><dd><%=h param[:publisher_number] %></dd>
            <dt>掲載教科書目録</dt><dd><a href="../../catalogue/<%=h param[:catalogueYear] %>"><%=h param[:catalogueYear] %>年度教科書目録</a></dd>
          </dl>
        </div>
      </div>
      <%- if param[:textbooks] and not param[:textbooks].empty? -%>
      <div class="row">
        <div class="col-md-12">
          <h2>教科書一覧</h2>
          <ul>
            <%- param[:textbooks].each do |textbook| -%>
              <li><a href="<%=h relative_path_uri(textbook[:uri]) %>"><%=h textbook[:name] %> (<%=h textbook[:publisher_name] %>)</a>
              （<%=h textbook[:usageYear] %>）
              </li>
            <%- end -%>
          </ul>
        </div>
      </div>
      <%- end -%>
      <div class="row">
        <div class="col-md-12">
          <h2>関連リンク</h2>
          <ul>
            <%- param[:seeAlso].each do |link| -%>
              <%- case link[:key] -%>
              <%- when :dbpedia -%>
              <li><a href="<%=h link[:url] %>">DBpedia: <%=h link[:url].last_part %></a></li>
              <%- when :ndla -%>
              <li><a href="<%=h link[:url] %>">国立国会図書館 名称典拠データ (<%=h link[:url].last_part %>)</a></li>
              <%- else -%>
              <li><a href="<%=h link[:url] %>"><%=h link[:url] %></a></li>
              <%- end -%>
            <%- end -%>
          </ul>
        </div>
      </div>
    </div>
